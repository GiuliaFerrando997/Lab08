<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.171" fx:controller="it.polito.tdp.dizionariograph.DizionarioGraphController">
   <left>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox>
               <children>
                  <Label text="Inserire il numero di lettere">
                     <HBox.margin>
                        <Insets left="5.0" right="20.0" top="2.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtLettere">
                     <HBox.margin>
                        <Insets left="13.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Label text="Inserire una aprola da cercare">
                     <HBox.margin>
                        <Insets left="5.0" right="20.0" top="7.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtParola">
                     <HBox.margin>
                        <Insets bottom="14.0" top="3.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
            <HBox>
               <children>
                  <Button fx:id="btnGeneraGrafo" mnemonicParsing="false" onAction="#doGrafo" text="Genera Grafo">
                     <HBox.margin>
                        <Insets left="45.0" right="45.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="btnVicini" mnemonicParsing="false" onAction="#doCercaVicini" text="Trova Vicini" />
                  <Button fx:id="btnGrado" mnemonicParsing="false" onAction="#doCercaGradoMAX" text="Trova grado max">
                     <HBox.margin>
                        <Insets left="45.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <TextArea fx:id="txtResult">
               <VBox.margin>
                  <Insets left="5.0" right="5.0" top="10.0" />
               </VBox.margin>
            </TextArea>
            <Button fx:id="btnReset" mnemonicParsing="false" onAction="#doReset" text="Reset">
               <VBox.margin>
                  <Insets bottom="5.0" left="430.0" top="7.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </left>
   <top>
      <Label text="Lab8_Dizionario" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" top="5.0" />
         </BorderPane.margin>
      </Label>
   </top>
</BorderPane>
